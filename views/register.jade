extends layout
block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up
        // register form
        form(method='POST' action='/register')
          if err_message
            .alert.alert-danger #{err_message}
          if suc_message
            .alert.alert-success #{suc_message}
          div.form-group
            label(for='name') First:
            input#name.form-control(type='text', placeholder='First name' name='firstname' required)
            div.form-group
            label(for='name') Last:
            input#name.form-control(type='text', placeholder='Last name' name='surname' required)
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email' required)
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='pword' required)
          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='confirmpword' required)
          button.btn.btn-primary(type='submit') Sign up